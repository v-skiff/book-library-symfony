{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 mt-3 text-center">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12 mt-1">
                <a href="{{ path('book_create') }}" class="btn btn-success">Create new book</a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12 mt-5">
                <h2>Books list (total: {{ pagination.getTotalItemCount }})</h2>
                <ul>
                    {% for book in pagination %}
                        <li>{{ book.title }} ({{ book.author.name }})</li>
                    {% endfor %}
                </ul>
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
